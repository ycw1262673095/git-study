/**app.wxss**/

page {
  width: 100%;
  height: 100%;
  position: relative;
  color: #333;
  box-sizing: border-box;
  background-color: #f8f8f8;
  font-size: 29rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -webkit-tap-highlight-color: transparent;
}

.bg-white {
  background-color: #fff;
}
.content-null {
  text-align: center;
  padding-top: 80rpx;
  color: #999;
  font-size: 28rpx;
}

.content-null image {
  width: 300rpx;
  margin-bottom: 15rpx;
}

button[disabled] {
  background-color: #1677FFac !important;
  line-height: 90rpx !important;
  color: #fff !important;
}

.bg-color {
  background-color:#1677FF !important;
}

.border-color {
  border-color: #1677FF!important;
}

.theme-color {
  color: #1677FF !important;
}

button {
  background-color: #fff;
  padding: 0px;
  border-radius: 0;
}

button::after {
  border-radius: 0;
  border: none;
}
