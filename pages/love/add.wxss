page {
  background-color: #fff;
}
.container{
  width: 94vw;
  padding-top: 40rpx;
  margin:0 auto;
  box-sizing: border-box;
}
.mbinput{
  margin-bottom: 50rpx;
}
.myuploadPic{
  height: 135rpx !important;
  width: 190rpx !important;
}
.section {
  padding: 15rpx 0 10rpx 0;
  width: 100%;
  height: 200rpx;
}
.savebtn{
  margin:0 auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  color: #fff;
  margin-top: 80rpx;
  margin-bottom: 120rpx;
}


.item{
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: flex-start;
  background-color: #fff;
  align-items: center;
  border-bottom: 1rpx #eee solid;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
.item .left{
  min-width: 160rpx;
 }
.flexstart{
  justify-content: flex-start;
}
.item .right{
  display: flex;
  font-size: 29rpx;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
.item .input{
  width:380rpx;
}
.btn{
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  padding:0 15rpx;
  box-sizing: border-box;
  font-size: 27rpx;
  border-radius: 8rpx;
}
